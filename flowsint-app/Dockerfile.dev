FROM node:20

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run development server with host flag to make it accessible from outside container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
